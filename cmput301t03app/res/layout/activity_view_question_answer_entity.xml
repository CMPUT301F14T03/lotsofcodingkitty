<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#000000">
    
    
   

                <TextView
                    android:id="@+id/answer_upvote_score"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/answer_upvote_button"
                    android:gravity="center"
                    android:text="0000"
                    android:background="#ffffff"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/answer_upvote_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/answer_upvote_score"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:src="@drawable/ic_upvote" />

                <TextView
                    android:id="@+id/answer_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/post_timestamp"
                    android:layout_alignBottom="@+id/post_timestamp"
                    android:layout_alignParentRight="true"
                    android:background="#000000"
                    android:gravity="right"
                    android:text="by: Lotso CodingKitty"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#ffffff"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/answer_text_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/answer_fav_icon"
                    android:layout_alignLeft="@+id/post_timestamp"
                    android:layout_alignParentRight="true"
                    android:background="#000000"
                    android:text="Question activity ANSWER textbody. This is the text body of my ANSWER. What is the body of a ANSWER"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/post_timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/answer_text_body"
                    android:layout_toRightOf="@+id/answer_upvote_score"
                    android:background="#000000"
                    android:gravity="left"
                    android:text="Posted: Oct 31, 2014"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#ffffff"
                    android:textSize="10dp" />

                <ImageButton
                    android:id="@+id/answer_fav_icon"
                    android:layout_width="75dp"
                    android:layout_height="28dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/answer_upvote_score"
                    android:background="#ffffff"
                    android:gravity="left"
                    android:src="@drawable/ic_fav_no" />
    
</RelativeLayout>
