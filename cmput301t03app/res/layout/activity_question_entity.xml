<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffdd00"
        android:orientation="horizontal" >

        <!-- This is the Score/upvote part on the left -->

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:background="#ff0000"
            android:gravity="left"
            android:orientation="vertical"
            android:textAlignment="center" >

            <ImageButton
                android:id="@+id/question_upvote_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher"
                android:gravity="center" />

            <TextView
                android:id="@+id/question_upvote_score"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Score"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >

                <ImageButton
                    android:id="@+id/question_fav_icon"
                    android:layout_width="32dp"
                    android:layout_height="28dp"
                    android:gravity="left"
                    android:src="@drawable/ic_launcher" />

                <ImageButton
                    android:id="@+id/question_viewed_icon"
                    android:layout_width="32dp"
                    android:layout_height="28dp"
                    android:gravity="right"
                    android:src="@drawable/ic_launcher" />
            </LinearLayout>
        </LinearLayout>

        <!-- This is the question title/time stamp part -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#0000dd"
            android:gravity="left"
            android:orientation="vertical"
            android:padding="10dp" >
            
            
             <TextView
                android:id="@+id/question_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="This is the question title?"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge" />
             
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                android:textColor="#000000">

                <TextView
                android:id="@+id/question_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posted: Oct 31, 2014"
                android:textAlignment="center"
                android:gravity="left"
                android:textSize="10dp"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceSmall" />
                
                <TextView
                android:id="@+id/question_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="by: Lotso CodingKitty"
                android:gravity="right"
                android:textSize="10dp"
                android:textColor="#000000"
                android:textAppearance="?android:attr/textAppearanceSmall" />
                
            </LinearLayout>

            
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>