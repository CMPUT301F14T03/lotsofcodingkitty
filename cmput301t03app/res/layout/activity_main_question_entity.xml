<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:focusable="false"
    android:paddingTop="10dp" 
    android:paddingBottom="10dp"
    android:paddingRight="5dp"  >

    <TextView
        android:id="@+id/question_upvote_score"
        android:layout_width="75dp"
        android:layout_height="35dp"
        android:layout_marginTop="-5dp"
        android:gravity="center"
        android:text="130"
        android:textSize="30dp"
        android:textColor="#000000"
         />

     <ImageView
        android:id="@+id/question_fav_icon"
        android:layout_width="42dp"
        android:layout_height="30dp"
        android:layout_below="@+id/question_upvote_score"
        android:background="@null"
        android:clickable="false"
        android:focusable="false"
        android:src="@drawable/ic_fav_no_small" /> 
        
      <ImageView
        android:id="@+id/question_pic_icon"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_below="@+id/question_upvote_score"
        android:layout_toRightOf="@+id/question_fav_icon"
        android:background="@null"
        android:gravity="left"
        android:clickable="false"
        android:focusable="false"
        android:src="@drawable/ic_picture_no" /> 

    <TextView
        android:id="@+id/question_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/question_upvote_score"
        android:text="Main Activity Question title. This is the title thatf a question?"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/post_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_title"
        android:layout_toRightOf="@+id/question_upvote_score"
        android:layout_alignLeft="@+id/question_title"
        android:gravity="left"
        android:text="Posted: Oct 31, 2014"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#333333"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/question_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_timestamp"
        android:text="by: Lotso CodingKitty"
        android:layout_alignLeft="@+id/post_timestamp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#333333"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/question_location1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
  		android:layout_below="@+id/question_author"
        android:layout_alignLeft="@+id/post_timestamp"
        android:text="Location: None"
        android:textColor="#333333"
        android:textSize="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
         />

</RelativeLayout>